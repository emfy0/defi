<div class="max-w-lg mx-auto mt-10 bg-white p-6 rounded-2xl shadow">
  <h1 class="text-2xl font-semibold mb-6 text-center">Создать контракт</h1>

  <div class="mb-6 bg-gray-50 p-4 rounded-xl border">
    <p><span class="font-semibold">Платежный метод:</span> <%= @offer.payment_method %></p>
    <p><span class="font-semibold">Сумма:</span> <%= @offer.value %></p>
    <p><span class="font-semibold">LTV %:</span> <%= @offer.ltv_percent %></p>
    <p><span class="font-semibold">Процент:</span> <%= @offer.interest_percent %></p>
  </div>

  <%= form_with model: @contract,
                url: offer_contracts_path(@offer),
                class: "space-y-6" do |f| %>

    <div>
      <%= f.label :repayment_method, 'Метод получения выплаты', class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :repayment_method,
            placeholder: @offer.payment_method,
            class: "w-full p-2 border rounded-lg focus:ring focus:outline-none" %>

      <% @contract.errors.full_messages_for(:repayment_method).each do |msg| %>
        <p class="text-red-600 text-sm mt-1"><%= msg %></p>
      <% end %>

      <%= f.label :refund_address, 'BTC адресс вывода залога', class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :refund_address,
            class: "w-full p-2 border rounded-lg focus:ring focus:outline-none" %>
    </div>

    <%= f.submit "Создать контракт",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-xl font-medium" %>

  <% end %>
</div>
